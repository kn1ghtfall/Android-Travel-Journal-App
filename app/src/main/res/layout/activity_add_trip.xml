<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/add_trip_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trip_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <EditText
        android:id="@+id/add_trip_name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_trip_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints="tripName"
        android:labelFor="@id/add_trip_name_text"
        android:hint="@string/trip_name"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/add_trip_destination_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        app:layout_constraintTop_toBottomOf="@id/add_trip_name_value"
        app:layout_constraintStart_toStartOf="parent"

        />

    <EditText
        android:id="@+id/add_trip_destination_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_trip_destination_text"
        android:hint="@string/destination"
        android:labelFor="@id/add_trip_destination_text"
        android:inputType="text"
        android:autofillHints="destination"
        />

    <TextView
        android:id="@+id/add_trip_trip_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trip_type"
        app:layout_constraintTop_toBottomOf="@id/add_trip_destination_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <RadioGroup
        android:id="@+id/add_trip_trip_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_trip_trip_type_text"
        app:layout_constraintStart_toStartOf="parent"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_break"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sea_side"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mountains"/>



    </RadioGroup>


    <TextView
        android:id="@+id/add_trip_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        app:layout_constraintTop_toBottomOf="@id/add_trip_trip_type"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/add_trip_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_trip_price"
        app:layout_constraintStart_toStartOf="parent"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_start_date"
        android:onClick="showDatePickerDialog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End date:"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"/>

</androidx.appcompat.widget.LinearLayoutCompat>